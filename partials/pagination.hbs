<nav class="pagination" role="navigation">
    {{#if prev}}
        <a class="nav-direction nav-left" href="{{page_url prev}}#blog"><span class="genericon genericon-previous"></span></a>
    {{/if}}
    <span class="page-number">Page <b>{{page}}</b> / {{pages}}</span>
    {{#if next}}
        <a class="nav-direction nav-right" href="{{page_url next}}#blog"><span class="genericon genericon-next"></span></a>
    {{/if}}
</nav>
